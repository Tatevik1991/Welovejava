<script>

    $('.middle').on('click', function(e) {
        if( e.target !== this )
            return;
        var item=$($($(e.target).children()[0]).children()[0]).children()[0];
       openViewItem(item);
    });

    function tweetShare(item){

       var url=itemUrlMaker(item);
              console.log(url)
        var id =$(item).attr("id"),

           arrayText=id.split('-'),
                text=arrayText.slice(0, arrayText.length-1),

            href = "https://twitter.com/share?url="+url+"&text=I love java because "+text;

        window.open(href);

    }

    function fbShareFunc(item) {
        var url=itemUrlMaker(item);
        console.log(url)
        fbShare(url, 'we love java because', 'we love java because', '', 520, 350);
    }

</script>